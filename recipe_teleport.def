# Header
Bootstrap: docker
From: nvidia/cuda:12.1.1-devel-ubuntu22.04

%environment
	export BASH_ENV=/opt/bashrc
	export PATH="/opt/miniconda3/bin:$PATH"
	export WANDB_API_KEY="7212366ffa7f4c560534bc0f6e978623b25c5f4b"

%files
	test.py /
	environment_teleport.yml /

%post
    apt-get update # update system
    apt-get install -y git   # install git
	apt-get install -y qtbase5-dev	# needed for envpool procgen
	apt-get install -y qtdeclarative5-dev 	# needed for envpool procgen
	apt-get install -y wget
    mkdir -p /opt/miniconda3
   	wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /opt/miniconda3/miniconda.sh
	bash /opt/miniconda3/miniconda.sh -b -u -p /opt/miniconda3
	rm -rf /opt/miniconda3/miniconda.sh
	export PATH="/opt/miniconda3/bin:$PATH"

	conda env create -n ppo_procgen -f /environment_teleport.yml
	echo -e "#! /bin/bash\n\n# script to activate the conda environment" > ~/.bashrc \
    && conda init bash \
    && echo -e "\nconda activate ppo_procgen" >> ~/.bashrc \
	&& conda clean -ay \
	&& cp ~/.bashrc /opt/bashrc
